<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
	
	<!-- navigation rules for helloWorld.xhtml -->
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/pages/result.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>example01</from-outcome>
			<to-view-id>/pages/groupValidation01.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>example02</from-outcome>
			<to-view-id>/pages/groupValidation02.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>example03</from-outcome>
			<to-view-id>/pages/modelValidation01.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!-- navigation rules for result.xhtml -->
	<navigation-rule>
		<from-view-id>/pages/result.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>back</from-outcome>
			<to-view-id>/pages/helloWorld.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>